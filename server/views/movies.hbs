<!DOCTYPE html>
<html lang="ca">
<head>
    {{> header}}
    <title>Movies</title>
</head>
<body>
    {{> menu}}
    
    <main>
        <h1>Top 15 Pel·lícules</h1>
        <section class="contenedor-tabla">
            <table class="tabla-peliculas">
                <thead>
                    <tr>
                        <th>Títol</th>
                        <th>Any</th>
                        <th>Duració</th>
                        <th>Rating</th>
                        <th>Idioma</th>
                        <th>Actors</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each allMovies}}
                    <tr>
                        <td class="titulo-pelicula">{{title}}</td>
                        <td>{{release_year}}</td>
                        <td>{{length}} min</td>
                        <td>{{rating}}</td>
                        <td>{{language}}</td>
                        <td class="lista-actores">{{actors}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </main>

    {{> footer}}
</body>
</html>